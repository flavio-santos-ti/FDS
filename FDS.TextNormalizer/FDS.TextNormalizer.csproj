<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>Flavio.Santos.TextNormalizer</PackageId>
    <Version>1.0.0</Version>
    <Authors>Flavio dos Santos</Authors>
    <Company>FDS</Company>
    <Product>FDS.TextNormalizer – A lightweight C# text normalization library</Product>
    <Description>Provides simple and efficient text normalization by removing diacritics, trimming whitespace, and converting to uppercase invariant. Ideal for preparing input data for comparison, indexing, or standardization.</Description>
    <PackageTags>text;normalizer;diacritics;uppercase;string;cleaning;FDS</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2025 Flavio dos Santos</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <PackageProjectUrl>https://www.linkedin.com/in/flavio-santos-ti/</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="bin\$(Configuration)\$(TargetFramework)\FDS.TextNormalizer.xml"
          Pack="true"
          PackagePath="lib\net8.0\" />

    <None Include="README.md" Pack="true" PackagePath="" />

  </ItemGroup>


</Project>
